.renderer
    width: 100%;
    height: 100%;

#renderer, #renderer-overlay
    absolute: top left;
    width: 100%;
    height: 100%;

    image
        pointer-events: none;

#renderer-overlay
    pointer-events: none;

#layout
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

#panel
    .left-panel
        fixed: top left;
        width: 220px;
        height: 100%;
        background-color: $uiColor.dark-90;
        z-index: 2000;
        display: flex;
        flex-direction: column;
        color: #fff;

        .layers
            .layer
                color: $textColor.body;
                font-size: $fontSize.small;
                padding: 4px 20px;
                border: 1px solid transparent;

                &.hovering
                    border-color: $color.base;

                &.selected
                    border-color: $color.base;
                    background-color: $color.base;
                    color: #fff;

        .board
            padding: 12px;

            h5
                font-weight: 500;
                font-size: 14px;
                letter-spacing: .1px;

            &:hover
                background-color: darken(@background-color, 8%);

            & + .board
                border-left: 1px solid darken(@background-color, 12%);

            &.selected
                background-color: lighten(@background-color, 8%);

#properties
    fixed: top right;
    width: 220px;
    height: 100%;
    background-color: $uiColor.dark-90;
    z-index: 2000;

    .property
        padding: 8px 20px 12px;
        margin: 8px 0;
        border-bottom: 1px solid lighten(@background-color, 8%);

        h5
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: .8px;
            color: $textColor.heading;
            font-size: $fontSize.small;
            margin-bottom: 4px;
            line-height: 1.68;

#toolbar
    fixed: top left;
    height: 44px;
    width: 100%;
    display: flex;
    content: ' ';
    z-index: 1800;
    background-color: $uiColor.dark-100;
