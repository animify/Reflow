.list
    & .list
        @extend .m0, .p0, .mt3, .pl4;

    li, .item
        @extend .m0, .mb3;
        color: $textColor.body;
        font-size: $fontSize.body;
        line-height: $lineHeight.body;
        transition: padding 140ms ease, border-left 140ms ease;

        a
            font-weight: $fontWeight.semiBold;
            @extend .link;
            @extend .link.link-body;

            img
                max-width: 2rem;
                max-height: 2rem;
                border-radius: $borderRadius.circle;
                vertical-align: text-bottom;
                relative: top 1px;
                margin-right: .8rem;

        &.header
            display: block;
            font-weight: $fontWeight.semiBold;

    &.ordered
        counter-reset: orderedListItem;

        .list
            counter-reset: orderedListItem;

        li, .item
            list-style: none;

            &:before
                @extend .mr1;
                content: counters(orderedListItem, '.') ' ';
                counter-increment: orderedListItem;
                opacity: .64;

        ol&
            li[value], .item[value]
                &:before
                    margin-right: .8rem;
                    content: attr(value);

    &.bulleted
        @extend .pl3;

        li, .item
            position: relative;

            &:before
                @extend .n-ml3;
                absolute: left auto top;
                content: '\2022';
                opacity: .64;

    &.divided
        max-width: 36rem;

        &.block
            max-width: none;
            width: 100%;

        li, .item
            @extend .pv2;
            margin: 0;
            border-bottom: 1px solid $color.dim;

            a
                display: inline-block;
                float: right;

    &.horizontal
        li, .item
            display: inline-block;
            margin: 0;

            & + li, & + .item
                @extend .ml6;

        &.compact
            li, .item
                & + li, & + .item
                    @extend .ml4;

    &.styled
        & > li, & > .item
            display: flex;
            flex-direction: row;
            position: relative;

            & + li, & + .item
                @extend .mt7;

            .upvote
                @extend .mr5, .ph2;
                text-align: center;
                display: flex;
                align-self: flex-start;
                align-items: center;
                justify-content: flex-start;
                flex-direction: column;
                font-size: $fontSize.small;
                cursor: pointer;
                border-radius: $borderRadius.base;
                border: 1px solid $color.dim;
                background-color: #fff;
                relative: top 5px;

                h6
                    relative: top -.64rem;

                svg
                    color: $color.smoke;

                &:hover
                    svg
                        color: $color.base;

                &.upvoted
                    svg
                        color: $color.base;

            .details
                @extend .pb7;
                display: flex;
                flex-direction: column;
                flex-grow: 1;
                border-bottom: 1px solid $color.dim;

                a
                    & + p
                        @extend .mt1;

                    & > *
                        color: inherit;

                .meta
                    display: flex;
                    flex-shrink: 0;
                    flex-grow: 1;
                    width: 100%;

