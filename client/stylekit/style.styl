@import 'nib';

global-reset();

* > * {
    cursor: default;
    user-select: none;
}

html {
    height: 100%;
    width: 100%;
    font-size: 62.5%;
}

body {
    overflow: hidden;
    fixed: top left;
    font-family: 'Avenir';
    font-size: 1rem;
}

strong {
    font-weight: 600;
}

#renderer, #renderer-overlay {
    absolute: top left;
    width: 100%;
    height: 100%;

    image {
        pointer-events: none;
    }
}

#renderer-overlay {
    pointer-events: none;
}

.stats {
    background-color: #202324;
    fixed: bottom right;
    padding: 16px;
    z-index: 4000;
    width: fit-content;
    text-align: right;
    color: #fff;
    font-size: 11px;

    p + p {
        margin-top: 4px;
    }
}

#layout {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

#panel {
    #boards {
        fixed: top left;
        width: 100%;
        background-color: #2b2e2e;
        border-bottom: 1px solid lighten(@background-color, 8%);
        z-index: 2000;
        display: flex;
        flex-direction: row;
        color: #fff;

        .board {
            padding: 12px 12px;

            h5 {
                font-weight: 500;
                font-size: 12px;
                letter-spacing: 0.1px;
            }

            &:hover {
                background-color: darken(@background-color, 8%);
            }

            & + .board {
                border-left: 1px solid darken(@background-color, 12%);
            }

            &.selected {
                background-color: lighten(@background-color, 8%);
            }
        }
    }

    #properties {
        fixed: top right;
        width: 230px;
        height: 100%;
        background-color: #25292a;
        z-index: 2000;

        .property {
            padding: 8px 16px;
            margin: 8px 0;
            border-bottom: 2px solid lighten(@background-color, 8%);

            h5 {
                text-transform: uppercase;
                font-weight: 600;
                letter-spacing: -0.1px;
                color: #8c9098;
                font-size: 10px;
            }
        }

        .input {
            display: flex;
            width: 100%;

            label {
                font-weight: 400;
                color: #bcc1cc;
                letter-spacing: 0.1px;
                font-size: 11px;
            }

            input {
                font-family: 'Avenir';
                border: 0;
                border-bottom: 2px solid transparent;
                background-color: transparent;
                outline: 0;
                padding: 4px 0;
                font-size: 14px;
                color: #fff;
                margin: 4px 0 0 8px;
                flex-grow: 1;
                max-width: none;

                &:focus {
                    border-color: #0691f3;
                }
            }

            & + .input {
                margin-top: 8px;
            }
        }
    }
}